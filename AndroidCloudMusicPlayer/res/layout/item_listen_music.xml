<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_black" />

    <RelativeLayout
        android:id="@+id/layout_abc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@color/blue_primary" >

        <TextView
            android:id="@+id/tv_name_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_toLeftOf="@+id/img_logo"
            android:layout_marginRight="5sp"
            android:paddingTop="10sp"
            android:singleLine="true"
            android:text="dasdasdasd"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_songs"
            android:layout_marginTop="10sp" >

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_duration"
                android:layout_toRightOf="@+id/tv_current_time"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
                android:thumb="@drawable/apptheme_scrubber_control_selector_holo_light" />

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5sp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5sp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:background="@drawable/ic_play_arrow_grey600_36dp"
            android:minHeight="1sp"
            android:minWidth="1sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_content"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/btn_play"
            android:background="@drawable/ic_skip_next_white_36dp"
            android:minHeight="1sp"
            android:minWidth="1sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_content"
            android:layout_marginRight="35sp"
            android:layout_marginTop="5sp"
            android:layout_toLeftOf="@+id/btn_play"
            android:background="@drawable/ic_skip_previous_white_36dp"
            android:minHeight="1sp"
            android:minWidth="1sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:paddingBottom="10sp" />

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_play"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:paddingBottom="10sp"
            android:text="http://dasada"
            android:textColor="#ff0000"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_cancel_grey600_36dp"
            android:minHeight="1sp"
            android:minWidth="1sp" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:layout_toLeftOf="@+id/btn_close"
            android:src="@drawable/icon_soundcloud" />
    </RelativeLayout>

</RelativeLayout>